page {
  font-size: 14px;
  background: #ececec;
  position: relative;
}

.chat-item {
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #ececec;
  margin-top: 12rpx;
  margin-bottom: 12rpx;
}

.chat-item:nth-last-child(2) {
  padding-bottom: 128rpx;
  margin-bottom: 0;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  margin: 16rpx;
  margin-left: 32rpx;
}

.chat-content {
  display: flex;
  flex-direction: column;
  flex: 1;
  width: 450rpx;
  padding-left: 24rpx;
  padding-right: 64rpx;
  align-content: center;
  align-self: center;
}

.name {
  margin-bottom: 8rpx;
}

.message-content {
  background: #fff;
  padding: 12rpx;
  width: auto;
  word-break:break-all;
  word-wrap:break-word;
}

.message-content:before {
  position: absolute;
  content: "";
  left: 144rpx;
  width: 0;
  height: 0;
  border-top: 12rpx solid transparent;
  border-right: 12rpx solid #fff;
  border-bottom: 12rpx solid transparent;
  border-left: 12rpx solid transparent;
}

.time {
  display: flex;
  flex: 1;
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content: center;
  font-size: 12px;
}

.input-item {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  background: #fff;
  padding: 12rpx;
  border-bottom: 1rpx solid #ececec;
}

#img {
  width: 64rpx;
  height: 64rpx;
  margin-left: 16rpx;
  display: flex;
  align-items: center;
  align-self: center;
  justify-content: center;
}

#text {
  display: flex;
  flex-direction: column;
  flex: 1;
  margin-left: 24rpx;
  margin-right: 24rpx;
  align-content: center;
  align-self: center;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid #1afa29;
}

#submit {
  padding: 12rpx;
  background: #04b91b;
  display: flex;
  font-size: 14px;
  height: 64rpx;
  line-height: 64px;
  align-items: center;
  align-self: center;
  justify-content: center;
  margin-right: 32rpx;
  color: #fff;
  width: 96rpx;
}
