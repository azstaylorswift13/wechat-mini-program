.message-item{
  display: flex;
  flex-direction: row;
  background: #fff;
  border-bottom: 1rpx solid #ececec;
}

.avatar{
  width: 96rpx;
  height: 96rpx;
  margin: 16rpx;
  margin-left: 32rpx;
}

.message-content{
  display: flex;
  flex-direction: column;
  flex: 1;
  width: 450rpx;
  padding-left: 24rpx;
  align-content: center;
  align-self: center;
}

.name{
  font-size: 14px;
  margin-bottom: 8rpx;
}

.recent{
  font-size: 12px;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; 
}

.time{
  display: flex;
  width: 125rpx;
  align-items: center;
  justify-content: flex-end;
  font-size: 12px;
  margin-right: 24rpx;
}